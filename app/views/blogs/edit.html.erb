<h3 class="center">Edit Blog</h3>

<%= form_for @blog do |f| %>
  <div class="input-field">
    <%= f.text_field :title %>
    <%= f.label :title %>
  </div>

  <div class="input-field">
    <%= f.text_area :content, class: "materialize-textarea" %>
    <%= f.label :content %>
  </div>

  <%= f.submit "Submit", class: "btn" %>
<% end %>