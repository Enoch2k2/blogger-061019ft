<h3><%= @blog.title %></h3>
<p><%= @blog.created_at.strftime("%B %d, %Y") %></p>
<p><%= @blog.content %></p>
<hr />
<h3>Comments</h3>

<ul>
  <% @blog.comments.each do |comment| %>
    <% if comment.id %>
      <li><%= comment.commenter.username %> Says: <%= comment.content %></li>
    <% end %>
  <% end %>
</ul>

<h4>Create Comment</h4>
<%= form_for @comment do |f| %>
  <%= f.hidden_field :blog_id %>
  <div class="input-field">
    <%= f.text_field :content %>
    <%= f.label :content %>
  </div>

  <%= f.fields_for :commenter, @comment.build_commenter do |commenter_field| %>
    <div class="input-field">
      <%= commenter_field.text_field :username %>
      <%= commenter_field.label :username %>
    </div>
  <% end %>
  <%= f.submit "Create Comment", class: "btn" %>
<% end %>
