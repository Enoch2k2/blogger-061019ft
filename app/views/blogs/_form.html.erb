<ul>
  <%= render_blog_errors %>
</ul>
<%= form_for blog do |f| %>
  <div class="input-field">
    <%= f.text_field :title %>
    <%= f.label :title %>
  </div>

  <div class="input-field">
    <%= f.text_area :content, class: "materialize-textarea" %>
    <%= f.label :content %>
  </div>

  <%= f.submit button_name, class: "btn" %>
<% end %>